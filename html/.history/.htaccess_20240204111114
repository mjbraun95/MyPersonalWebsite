RewriteEngine On

# Ensure that HTTP requests for actual files (like images, CSS, JS) are served directly.
RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|ico|svg)$ [NC]
RewriteRule ^ - [L]

# Rewrite requests for files without an extension to their .php version
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Redirect all other requests to index.php, except for explicit asset file types and PHP files
RewriteCond %{REQUEST_URI} !\.(php|html?|css|js|jpg|jpeg|png|gif|ico|svg)$
RewriteCond %{REQUEST_URI} !^/index\.php$
RewriteRule ^(.*)$ https://matthewbraun.ca/index.php [R=301,L]
